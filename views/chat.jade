extends base
block vars
    - var title = 'Chat'
block head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    script(src='/socket.io/socket.io.js')
block content
    .container
        // Static navbar
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Files && Chat
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/home') Home
                        li.active
                            a(href='/chat') Chat
                        li
                            a(href='directory') Directory

                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/logout') Logout


       .container
           .row(id="userFormArea")
               .col-md-12
                   form(id='userForm')
                       .form-group
                           label Enter nickname for chat
                           input(class="form-control" id="nick")
                           br
                           input(type="submit" class="btn btn-primary" value="Enter chat")
           .row(id="messageArea")
               .col-md-8
                   .chat(id="chat" style="height: 480px; overflow: auto; box-shadow: 3px 3px 10px 5px #000;" )

                   form(id='messageForm')
                       .form-group
                           br
                           label Enter message
                           textarea.form-control(id="message" style="")
                           br
                           input(type="submit" class="btn btn-primary" value="Send message")
               .col-md-4
                   .well
                       h3 Online users
                       ul(class="list-group" id="users")
       script
           include ../js/chat.js



